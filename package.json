{
	"name": "next-blog",
	"version": "3.1.1",
	"description": "Markdown based blog using next.js",
	"scripts": {
		"runts": "ts-node --transpile-only --project=tsconfig.json",
		"dev": "yarn next dev client",
		"posts": "yarn runts server/build-posts.ts",
		"watch-posts": "while true ; do yarn posts ; inotifywait -r -e modify posts ; done",
		"feed": "yarn runts server/build-feed.ts",
		"typecheck": "tsc",
		"lint": "eslint . --ext .ts,.tsx",
		"build": "rm -rf client/out/* && yarn typecheck && yarn lint && yarn posts && yarn feed && yarn next build client && yarn next export client",
		"commit": "yarn build && ./postprocess.sh"
	},
	"devDependencies": {
		"@next/eslint-plugin-next": "^12.2.0",
		"@typescript-eslint/eslint-plugin": "^5.30.4",
		"@typescript-eslint/parser": "^5.30.4",
		"@yarnpkg/sdks": "^3.0.0-rc.11",
		"comlink": "^4.3.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"next": "^12.2.0",
		"prettier": "^2.7.1",
		"processmd": "^4.6.3",
		"standard": "^17.0.0"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.1.1",
		"@fortawesome/free-regular-svg-icons": "^6.1.1",
		"@fortawesome/free-solid-svg-icons": "^6.1.1",
		"@fortawesome/react-fontawesome": "^0.2.0",
		"@next/bundle-analyzer": "^12.2.0",
		"@types/debounce-promise": "^3.1.4",
		"@types/js-yaml": "^4.0.5",
		"@types/rc-tooltip": "^3.7.6",
		"@types/react": "^18.0.14",
		"@types/react-dom": "^18.0.5",
		"@types/react-modal": "^3.13.1",
		"@types/webpack": "^5.28.0",
		"anchorme": "^2.1.2",
		"debounce-promise": "^3.1.2",
		"eslint": "^8.19.0",
		"feed": "^4.2.2",
		"glob": "^8.0.3",
		"js-yaml": "^4.1.0",
		"mobx": "^6.6.1",
		"mobx-react": "^7.5.1",
		"pandoc-filter": "^2.0.3",
		"pandoc-url2cite": "^0.6.16",
		"rc-tooltip": "^5.1.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-katex": "^2.0.2",
		"react-modal": "^3.15.1",
		"react-select": "^5.4.0",
		"react-syntax-highlighter": "^15.5.0",
		"react-visibility-sensor": "^5.1.1",
		"recharts": "^2.1.12",
		"sass": "^1.53.0",
		"sql.js-httpvfs": "^0.8.11",
		"tachyons": "^4.12.0",
		"ts-loader": "^9.3.1",
		"ts-node": "^10.8.2",
		"typescript": "^4.7.4",
		"url-loader": "^4.1.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx,css,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"semi": false,
		"tabWidth": 4,
		"useTabs": true,
		"trailingComma": "all",
		"printWidth": 80,
		"endOfLine": "lf"
	},
	"packageManager": "yarn@3.2.1"
}
