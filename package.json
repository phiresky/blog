{
	"name": "next-blog",
	"version": "3.1.1",
	"description": "Markdown based blog using next.js",
	"scripts": {
		"runts": "ts-node --transpile-only --project=tsconfig.json",
		"dev": "yarn next dev client",
		"posts": "yarn runts server/build-posts.ts",
		"watch-posts": "while true ; do yarn posts ; inotifywait -r -e modify posts ; done",
		"feed": "yarn runts server/build-feed.ts",
		"typecheck": "tsc",
		"lint": "eslint . --ext .ts,.tsx",
		"build": "rm -rf client/out && yarn lint && yarn posts && yarn feed && yarn next build client && yarn next export client",
		"commit": "yarn build && ./postprocess.sh"
	},
	"devDependencies": {
		"@next/eslint-plugin-next": "^13.4.19",
		"@types/lodash": "^4.14.197",
		"@types/node": "^20.5.6",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"@yarnpkg/sdks": "^3.0.0-rc.50",
		"comlink": "^4.4.1",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"next": "^13.4.19",
		"prettier": "^3.0.2",
		"processmd": "^4.7.0",
		"standard": "^17.1.0"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.4.2",
		"@fortawesome/free-regular-svg-icons": "^6.4.2",
		"@fortawesome/free-solid-svg-icons": "^6.4.2",
		"@fortawesome/react-fontawesome": "^0.2.0",
		"@next/bundle-analyzer": "^13.4.19",
		"@types/debounce-promise": "^3.1.6",
		"@types/js-yaml": "^4.0.5",
		"@types/rc-tooltip": "^3.7.7",
		"@types/react": "^18.2.21",
		"@types/react-dom": "^18.2.7",
		"@types/react-modal": "^3.16.0",
		"@types/webpack": "^5.28.2",
		"anchorme": "^3.0.5",
		"classnames": "^2.3.2",
		"debounce-promise": "^3.1.2",
		"eslint": "^8.48.0",
		"feed": "^4.2.2",
		"glob": "^10.3.3",
		"js-yaml": "^4.1.0",
		"katex": "^0.16.8",
		"lodash": "^4.17.21",
		"mobx": "^6.10.0",
		"mobx-react": "^9.0.0",
		"pandoc-filter": "^2.2.0",
		"pandoc-url2cite": "^0.6.16",
		"prismjs": "^1.29.0",
		"prop-types": "^15.8.1",
		"rc-tooltip": "^6.0.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-katex": "^3.0.1",
		"react-modal": "^3.16.1",
		"react-resize-detector": "^9.1.0",
		"react-select": "^5.7.4",
		"react-syntax-highlighter": "^15.5.0",
		"react-visibility-sensor": "^5.1.1",
		"recharts": "^2.8.0",
		"sass": "^1.66.1",
		"sql.js-httpvfs": "^0.8.12",
		"tachyons": "^4.12.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx,css,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"semi": false,
		"tabWidth": 4,
		"useTabs": true,
		"trailingComma": "all",
		"printWidth": 80,
		"endOfLine": "lf"
	},
	"packageManager": "yarn@4.0.0-rc.50"
}
